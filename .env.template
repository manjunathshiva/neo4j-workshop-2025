# Knowledge Graph RAG System Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONNECTIONS (Required)
# =============================================================================

# Neo4j Cloud Instance
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Qdrant Cloud Instance  
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# =============================================================================
# LLM API KEYS
# =============================================================================

# Groq (Recommended - Free tier available)
GROQ_API_KEY=your-groq-api-key

# OpenAI (Optional - Premium option)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Optional - Alternative premium)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Hugging Face (Optional - For HF models)
HUGGINGFACE_API_TOKEN=your-huggingface-token

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Primary LLM Provider (groq, openai, anthropic)
PRIMARY_LLM=groq

# Text-to-Cypher Model (recommended: kimi-k2-instruct for Groq)
TEXT_TO_CYPHER_MODEL=moonshotai/kimi-k2-instruct-0905

# Embedding Strategy (local, openai)
EMBEDDING_MODEL=local

# Local Embedding Model Name
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Application Ports
STREAMLIT_PORT=8501
FASTAPI_PORT=8000

# Processing Settings
MAX_DOCUMENT_SIZE_MB=10
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_ENTITIES_PER_DOCUMENT=100

# =============================================================================
# WORKSHOP SETTINGS
# =============================================================================

# Enable demo mode with sample data
DEMO_MODE=true

# Sample documents directory
SAMPLE_DOCS_DIR=data/samples

# Enable processing status display
SHOW_PROCESSING_STATUS=true